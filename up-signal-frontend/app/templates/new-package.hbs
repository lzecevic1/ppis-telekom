<div class="container new-service-body">
 <div class="panel panel-default">
   <div class="panel-body">
    <h4>Unesite podatke o novom paketu:</h4>
    </div>
    <div class="panel-body register-form__footer">
    <form>
  <div class="form-group">
    <label>Naziv paketa:</label>
      {{input type="text" class="form-control" value=model.package.name}}
  </div>
    <div class="form-group">
    <label>Opis paketa:</label>
      {{textarea class="form-control" value=model.package.description}}
  </div>
    <div class="form-group">
      <label>Cijena (KM)</label>
      {{input type="number" class="form-control" id="price" value=model.package.price}}
    </div>
    <div class="form-group">
    <label>Ponudjene usluge</label>
    </div>
    {{#each model.service as |service|}}
        <input type="checkbox" id={{service.serviceId}}/>
        <label for={{service.serviceId}}><span></span>{{service.serviceId}}</label>
        <p><br/></p>
    {{/each}}
  <button class="btn btn-lg btn-primary col-md-2" type="submit" {{action 'onNext'}}>UNOS</button>
</form>
</div>
</div>
</div>
